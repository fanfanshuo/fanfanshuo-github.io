    <div id="heartContainer"></div>

    <script>
        const body = document.body;
        const mainMessage = document.getElementById('mainMessage');
        const heartContainer = document.getElementById('heartContainer');
        const explosionColors = ['#ffd700', '#ff4500', '#fff']; 

        // --- 1. çˆ±å¿ƒé£˜è½èƒŒæ™¯æ•ˆæœ ---
        function createFallingHeart() {
            const heart = document.createElement('span');
            heart.className = 'heart';
            heart.innerHTML = 'â¤ï¸'; 
            heart.style.left = `${Math.random() * 100}vw`;
            heart.style.animationDelay = `${Math.random() * 5}s`;
            heart.style.animationDuration = `${7 + Math.random() * 6}s`;
            heartContainer.appendChild(heart);
            setTimeout(() => heart.remove(), 13000);
        }
        setInterval(createFallingHeart, 400);

        // --- 2. çˆ†ç‚¸æ˜Ÿæ˜Ÿç²’å­æ•ˆæœ ---
        function createExplosion(x, y, count, colorList) {
            for (let i = 0; i < count; i++) {
                const particle = document.createElement('span');
                particle.className = 'explosion-star';
                particle.innerHTML = 'â­'; 
                
                const color = colorList[Math.floor(Math.random() * colorList.length)];
                particle.style.setProperty('--color', color);
                
                const angle = Math.random() * 2 * Math.PI;
                const distance = Math.random() * 100 + 50; 
                const finalX = Math.cos(angle) * distance;
                const finalY = Math.sin(angle) * distance;

                particle.style.left = `${x}px`;
                particle.style.top = `${y}px`;
                particle.style.setProperty('--x', `${finalX}px`);
                particle.style.setProperty('--y', `${finalY}px`);

                document.body.appendChild(particle);
                setTimeout(() => particle.remove(), 1500);
            }
        }
        
        // è¾…åŠ©å‡½æ•°ï¼šåˆ›å»ºç¥ç¦å¼¹å‡ºæ¡†
        function createPopup(text, bgColor, textColor) {
            const popup = document.createElement('div');
            popup.className = 'popup';
            popup.innerHTML = text;
            popup.style.backgroundColor = bgColor;
            popup.style.color = textColor;
            popup.style.boxShadow = `0 10px 25px ${bgColor}, 0 0 50px ${bgColor}`;

            // ç§»é™¤å¼¹å‡ºæ¡†
            setTimeout(() => {
                popup.style.opacity = '0';
                popup.style.transform = 'translate(-50%, -50%) scale(0.5)';
                setTimeout(() => popup.remove(), 500);
            }, 4000);
            return popup;
        }

        // --- 3. æ ¸å¿ƒå‡½æ•°ï¼šå¤„ç†ç‚¹å‡»äº‹ä»¶ ---
        function handleButtonClick(event, callback) {
            // è§£å†³ç§»åŠ¨ç«¯ç‚¹å‡»å¤±æ•ˆçš„å…³é”®ï¼šæ£€æŸ¥æŒ‰é’®æ˜¯å¦å¯è§
            const button = event.currentTarget;
            if (button.style.visibility === 'hidden') return;
            
            // æ‰§è¡ŒæŒ‰é’®é€»è¾‘
            callback(event);
        }

        // --- 4. æŒ‰é’®äº‹ä»¶ç»‘å®š (ä½¿ç”¨é—­åŒ…å’Œé€šç”¨å¤„ç†å‡½æ•°) ---
        
        // ç¬¬ä¸€æ¬¡ç‚¹å‡»ï¼šæ”¹å˜ä¸»æ ‡é¢˜ä¸ºâ€œå¤©å¤©å¿«ä¹â€
        document.getElementById('btn1').addEventListener('click', (e) => handleButtonClick(e, (event) => {
            const rect = event.currentTarget.getBoundingClientRect();
            const centerX = rect.left + rect.width / 2;
            const centerY = rect.top + rect.height / 2;
            
            createExplosion(centerX, centerY, 40, explosionColors);
            mainMessage.innerHTML = 'å´é›ªæ¸… è¦å¤©å¤©å¿«ä¹å•Šï¼';
            
            mainMessage.style.animation = 'flashScale 0.5s ease-out';
            setTimeout(() => {
                 mainMessage.style.animation = 'beat 1.5s infinite alternate';
            }, 500);

            body.style.background = 'linear-gradient(135deg, #fffafa, #ffe4e1)'; 
            event.currentTarget.style.visibility = 'hidden';
        }));

        // ç¬¬äºŒæ¬¡ç‚¹å‡»ï¼šå…³äºâ€œä¸å¼€å¿ƒâ€çš„ç¥ç¦
        document.getElementById('btn2').addEventListener('click', (e) => handleButtonClick(e, (event) => {
            body.style.background = 'linear-gradient(135deg, #f7ff00, #ff4500)'; 
            
            const popup = createPopup('ğŸ’– æœ‰ä¸å¼€å¿ƒä¸€å®šè¦ç»™æˆ‘è¯´ï¼', '#ff4500', 'white');
            document.body.appendChild(popup);

            event.currentTarget.style.visibility = 'hidden';
        }));

        // ç¬¬ä¸‰æ¬¡ç‚¹å‡»ï¼šå…³äºâ€œæ— å¿§æ— è™‘â€çš„æœ€ç»ˆç¥ç¦
        document.getElementById('btn3').addEventListener('click', (e) => handleButtonClick(e, (event) => {
            body.style.background = 'linear-gradient(135deg, #00ffff, #00ff7f)'; 
            
            const popup = createPopup('ğŸŒˆ æˆ‘å¸Œæœ›ä½ æ¯å¤©éƒ½æ— å¿§æ— è™‘çš„ï¼', '#00fa9a', 'white');
            document.body.appendChild(popup);
            
            event.currentTarget.style.visibility = 'hidden';

            const container = document.querySelector('.button-container');
            container.style.opacity = '0';
            container.style.pointerEvents = 'none'; 
        }));

    </script>

